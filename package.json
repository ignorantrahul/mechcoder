{
  "name": "mechcoder",
  "displayName": "MechCoder",
  "description": "A VSCode extension for code generation, suggestions, error correction, and refactoring powered by ChatGPT.",
  "version": "1.0.0",
  "repository": "https://github.com/ignorantrahul/mechcoder",
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "package": "vsce package",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^7.29.0",
    "typescript": "^4.3.5"
  },
  "contributes": {
    "commands": [
      {
        "command": "mechcoder.generateCode",
        "title": "MechCoder: Generate Code"
      },
      {
        "command": "mechcoder.correctErrors",
        "title": "MechCoder: Correct Errors"
      },
      {
        "command": "mechcoder.refactorCode",
        "title": "MechCoder: Refactor Code"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MechCoder Settings",
      "properties": {
        "mechcoder.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for MechCoder extension."
        },
        "mechcoder.modelVersion": {
          "type": "string",
          "enum": [
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "default": "gpt-3.5-turbo",
          "description": "Select the ChatGPT model version."
        }
      }
    }
  }
}
